{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "globals": {
        "process": true
    },
    "env": {
        "node": true
    },
    "rules": {
        "semi": [2, "never"],
        "sort-imports": ["error", {
            "memberSyntaxSortOrder": ["none", "multiple", "all", "single"]
        }]
    }
}